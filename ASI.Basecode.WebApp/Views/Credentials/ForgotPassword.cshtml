@using static ASI.Basecode.Resources.Views.ForgotPassword
@using ASI.Basecode.Services.ServiceModels
@model ASI.Basecode.Services.ServiceModels.ForgotPasswordViewModel
@{
    ViewBag.LoginView = true;
}
<div class="background group relative flex h-screen w-screen items-center justify-center">
    <div class="credential-gradient flex h-full w-full transform-gpu flex-col items-center justify-center drop-shadow-lg transition-all duration-100 sm:w-2/3 sm:h-3/4 sm:rounded-xl md:opacity-80 md:translate-x-3/4 md:w-1/3 md:scale-x-105 md:h-5/6 md:rounded-xl md:hover:opacity-100 md:hover:translate-x-0 md:hover:scale-105">
        <div class="flex h-52 w-full flex-col items-center justify-center gap-5">
            <img src="/img/LogoBg.png" class="mt-5 h-24 w-24 rounded-full">
            <label class="font-sans text-2xl font-bold tracking-wide text-white drop-shadow-lg">@ForgotPasswordHeader</label>
        </div>
        <form asp-action="ForgotPassword" method="post" class="flex w-full flex-col gap-5 px-16">
            <div class="flex w-full flex-row items-center border-b border-zinc-400">
                <img src="/img/EmailIcon.png" class="h-5 w-5" />
                <input asp-for="Email" type="email" id="emailInput" placeholder="Email" class="border-0 w-full bg-transparent px-4 py-2 text-white placeholder:text-white focus:outline-none focus:border-0" />
                <span asp-validation-for="Email" class="text-xs text-red-500"></span>
            </div>

            <div class="mt-5 flex flex-col items-center justify-center gap-3">
                <button type="submit" id="submitBtn" class="w-36 rounded-full bg-white py-2 text-gray-700 drop-shadow-lg duration-300 hover:bg-violet-500 hover:text-white">
                    @Submit
                </button>
                <label class="mt-3 text-center text-sm text-white"><a asp-area="" asp-controller="Credentials" asp-action="Login" class="underline">@Back</a></label>
            </div>
        </form>
    </div>
    <h1 class="text-outline group-hover:opacity-0 pointer-events-none absolute left-8 top-0 hidden font-sans font-bold italic leading-none text-[10rem] text-black opacity-100 transition-opacity duration-300 dark:text-white md:inline">
        <span class="text-violet-500">EX</span><span class="text-[9rem] opacity-50">PENSE</span><br />
        <span class="text-violet-500">TR</span><span class="text-[9rem] opacity-50">ACKER</span>
        <div class="opacity-80 ms-5 mt-5 flex flex-col">
            <label class="text-xl not-italic text-black text-black dark:text-white"><span class="text-violet-500">Take Charge</span> of Your Expenses</label>
            <label class="text-xl not-italic text-black text-black dark:text-white"><span class="text-violet-500">Experience the power</span> of effortless expense tracking and budgeting</label>
        </div>
        <div class="mt-12 flex h-auto w-full flex-row items-center justify-center gap-5">
            <button class="h-10 rounded-lg bg-violet-500 px-8 py-2 text-sm text-gray-700 text-black drop-shadow-lg duration-300 hover:bg-violet-500 hover:text-white dark:text-white">Start By Logging In!</button>
            <button class="h-10 rounded-lg bg-gray-300 px-8 py-2 text-sm text-gray-700 text-black text-black drop-shadow-lg duration-300 hover:bg-violet-500">Or Register Now</button>
        </div>
    </h1>
</div>

@section Scripts {
    <script>
        <partial name="_ValidationScriptsPartial" />
    </script>
}
